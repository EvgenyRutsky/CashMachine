<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".Cart">

    <!--<ListView-->
        <!--android:id="@+id/listView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <Button
        android:id="@+id/goToScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="Сканировать"
        tools:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="    Оплатить    "
        tools:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:textSize="24sp"
        tools:lines="2" />

    <TextView
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/row1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:text=""
        android:textSize="24sp"
        tools:lines="2" />

    <TextView
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/row1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:text=""
        android:textSize="24sp"
        tools:lines="2" />

    <TextView
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/row1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:text=""
        android:textSize="24sp"
        tools:lines="2" />

    <TextView
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/row1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:text=""
        android:textSize="24sp"
        tools:lines="2" />

    <TextView
        android:id="@+id/toPay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="110dp"
        android:text="К оплате: "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="110dp"
        android:paddingRight="50dp"
        android:text="Внесено:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/money"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-130dp"
        android:layout_marginBottom="105dp"
        android:layout_toStartOf="@+id/pay"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/toPay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toPay1"
        android:layout_toEndOf="@+id/toPay1"
        android:textSize="24sp" />

</RelativeLayout>